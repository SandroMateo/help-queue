{{#if showComponents.showTicketForm}}
  <form>
    <div class="form-group">
      <label for="name"></label>
      {{input value=name type="text" placeholder="Please enter your name" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="location"></label>
      {{input value=location type="text" placeholder="Please enter your location" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="question"></label>
      {{textarea value=question type="text" placeholder="Give a brief description of issue you are having." class="form-control" rows="5"}}
    </div>
    <button class="btn" {{action 'saveTicket'}}>Help!</button>
  </form>
{{/if}}
